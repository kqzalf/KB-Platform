# KB Platform Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kb"

# Redis URL for job queue and caching
# Format: redis://host:port or redis://username:password@host:port
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI Provider: "openai", "ollama", or "none"
LLM_PROVIDER="ollama"

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:3b"

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================

# Path to the vault directory (relative to project root)
VAULT_PATH="./vault"

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Server Port
PORT=4000

# API Base URL (for CORS and internal communication)
API_BASE_URL="http://localhost:4000"

# =============================================================================
# WEB SCRAPING CONFIGURATION
# =============================================================================

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Scraping Rate Limits (requests per minute)
SCRAPING_RATE_LIMIT=60

# User Agent for web scraping
USER_AGENT="KB-Platform-Bot/1.0"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (if implementing authentication)
JWT_SECRET="your-jwt-secret-here"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level: "error", "warn", "info", "debug"
LOG_LEVEL="info"

# Log Format: "json" or "pretty"
LOG_FORMAT="pretty"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment: "development", "production", "test"
NODE_ENV="development"

# Enable debug mode
DEBUG=false

# =============================================================================
# GPU CONFIGURATION (Docker only)
# =============================================================================

# NVIDIA GPU Configuration
NVIDIA_VISIBLE_DEVICES="all"
CUDA_VISIBLE_DEVICES="0"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Metrics Collection
METRICS_ENABLED=false
METRICS_PORT=9090

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications (if implementing)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Slack Notifications (if implementing)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API Keys (if needed)
EXTERNAL_API_KEY="your-external-api-key"

# Webhook URLs (if implementing)
WEBHOOK_URL="https://your-webhook-url.com"
